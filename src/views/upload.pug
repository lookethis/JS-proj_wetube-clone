extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="title", placeholder="Title", type="text", maxlength=20, required)
    input(name="description", placeholder="Description", type="text", minlength=20, required)
    input(name="hashtags", placeholder="Hashtags, seperated by comma.", type="text", required)
    input(type="submit", value="Upload Video")